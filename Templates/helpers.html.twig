

{% macro id_field(id) %}
    {% if id %}
        <input type="hidden" name="id" value="{{ id }}"/>
    {% endif %}
{% endmacro %}

{% macro create_and_save(is_update,is_ajax) %}
    <div class="button-group">
        {% if is_update %}
            <input class="btn create" type="submit" value="{% trans 'Save' %}"/>
        {% else %}
            <input class="btn" type="submit" value="{% trans 'Create' %}"/>
        {% endif %}
        {% if is_ajax %}
        <input class="btn" type="button" value="{% trans 'Close' %}" 
            onclick=" Region.of(this).remove();"/>
        {% endif %}
    </div>
{% endmacro %}
